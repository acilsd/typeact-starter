{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./build/",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": ["es2017", "es2018", "dom", "esnext.asynciterable"],
    "paths": {
      "styled/*": ["src/styled/*"],
      "stores/*": ["src/stores/*"],
      "ui/*": ["src/ui/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "webpack.config.js"]
}
